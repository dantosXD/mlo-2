{
  "family": "mlo-2",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "mlo-2",
      "image": "123456789012.dkr.ecr.us-east-1.amazonaws.com/mlo-2:latest",
      "essential": true,
      "portMappings": [
        { "containerPort": 3000, "hostPort": 3000, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "LOG_LEVEL", "value": "info" }
      ],
      "secrets": [
        { "name": "SECRET_TOKEN", "valueFrom": "arn:aws:secretsmanager:us-east-1:123456789012:secret:mlo-2" }
      ]
    }
  ]
}
